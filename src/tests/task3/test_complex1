prog
var x; // declare variable x
var cond; // declare variable cond
var i;
input x; // read value from standard input
i := 1; // assign constant values
goto lhead;

lhead: // this is a label
cond := i > 100; // evaluate condition
if (cond) goto lexit; // jump if condition holds, i.e. cond != 0
x := 2 * x;
i := i + x;
output x;
goto lhead; // jump to label lhead

lexit:
output x; // print variable x on standard output
endprog